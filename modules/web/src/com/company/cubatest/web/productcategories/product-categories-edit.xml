<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.cubatest.web.productcategories.ProductCategoriesEdit"
        datasource="productCategoriesDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cubatest.web.productcategories">
    <dsContext>
        <datasource id="productCategoriesDs"
                    class="com.company.cubatest.entity.ProductCategories"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="productCategoriesDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
